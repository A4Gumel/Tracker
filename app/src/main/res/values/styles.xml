<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="navigationIcon">@color/colorSecondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
        <item name="alertDialogStyle">@style/MyAlertDialogStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetStyle</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="fontFamily">@font/raleway_subtitle</item>
        <item name="suffixTextColor">@color/textColor</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="materialAlertDialogTheme">@style/PopUpAlert</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
    </style>

    <style name="CaptionTextViewStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/overlock_headline</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SearchTextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="backgroundColor">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="fontFamily">@font/raleway_subtitle</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="textAppearanceHeadline6">@style/CaptionTextViewStyle</item>
        <item name="android:inputType">text</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:fontFamily">@font/raleway_subtitle</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnPrimarySurface">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccEDTStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textColor</item>
        <item name="backgroundColor">@color/textColor</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
        <item name="fontFamily">@font/overlock_headline</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="textAppearanceHeadline6">@style/CaptionTextViewStyle</item>
        <item name="hintTextColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="myTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxBackgroundColor">@color/colorSecondary</item>
        <item name="android:textColorHighlight">@color/colorSecondary</item>
        <item name="android:colorBackgroundCacheHint">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="ExFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="fontFamily">@font/raleway_subtitle</item>
    </style>

    <style name="SearchCategoryTvStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/overlock_headline</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="AccButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/overlock_headline</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="background">@color/colorSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">24dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="materialButtonStyle">@style/ThemeMaterialCalendarTextButton</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ThemeMaterialCalendarTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/textColor</item>
    </style>

    <style name="OrdersTabsStyle" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="fontFamily">@font/raleway_subtitle</item>
        <item name="tabTextColor">@color/textColor</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
    </style>

    <style name="OrdersTabsTextStyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/raleway_subtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
    </style>

    <style name="BottomSheetButtonMDC" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyAlertDialogButtonStyle</item>
    </style>

    <style name="MyAlertDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/overlock_headline</item>
    </style>


    <style name="LicensesActivityStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="titleTextColor">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="PopUpAlert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="fontFamily">@font/raleway_subtitle</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="titleTextColor">@color/colorSecondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
    </style>

</resources>