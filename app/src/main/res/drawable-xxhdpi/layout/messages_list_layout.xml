<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiverProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:src="@drawable/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wordpress.priyankvex.smarttextview.SmartTextView
        android:id="@+id/receiverMessagesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_toEndOf="@id/receiverProfileImage"
        android:background="@drawable/receiver_messages_bg"
        android:elevation="4dp"
        android:fontFamily="@font/raleway_subtitle"
        android:padding="8dp"
        android:text="Receiver messages here.."
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/receiverProfileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/receiverProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:fontFamily="@font/raleway_subtitle"
        android:maxLines="1"
        android:padding="4dp"
        android:text="12:30pm"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/receiverMessagesText"
        app:layout_constraintTop_toBottomOf="@+id/receiverMessagesText" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/receiver_messages_image"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:elevation="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/receiverProfileImage"
        app:layout_constraintTop_toTopOf="@+id/receiverProfileImage"
        app:riv_border_color="@color/colorPrimary"
        app:riv_border_width="1dp"
        app:riv_corner_radius="16dp" />

    <TextView
        android:id="@+id/image_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_messages_image"
        android:elevation="2dp"
        android:fontFamily="@font/raleway_subtitle"
        android:maxLines="1"
        android:padding="4dp"
        android:text="12:30pm"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/receiver_messages_image"
        app:layout_constraintTop_toBottomOf="@+id/receiver_messages_image" />

    <com.wordpress.priyankvex.smarttextview.SmartTextView
        android:id="@+id/sender_messages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sender_messages_bg"
        android:elevation="2dp"
        android:fontFamily="@font/raleway_subtitle"
        android:gravity="start"
        android:padding="8dp"
        android:text="Sender Messages Here..."
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sender_messages_image"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/colorAccent"
        app:riv_border_width="1dp"
        app:riv_corner_radius="16dp" />

    <TextView
        android:id="@+id/sender_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_messages_text"
        android:layout_alignStart="@id/sender_messages_text"
        android:layout_alignParentEnd="true"
        android:elevation="2dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:fontFamily="@font/raleway_subtitle"
        android:freezesText="true"
        android:gravity="start"
        android:marqueeRepeatLimit="@integer/default_cycle_duration"
        android:padding="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="12:30pm"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/sender_messages_image"
        app:layout_constraintTop_toBottomOf="@+id/sender_messages_image" />


    <TextView
        android:id="@+id/sender_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_messages_image"
        android:layout_alignStart="@id/sender_messages_text"
        android:layout_alignParentEnd="true"
        android:elevation="2dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:fontFamily="@font/raleway_subtitle"
        android:freezesText="true"
        android:gravity="start"
        android:marqueeRepeatLimit="@integer/default_cycle_duration"
        android:padding="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="12:30pm"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/sender_messages_text"
        app:layout_constraintTop_toBottomOf="@+id/sender_messages_text" />

    <ImageView
        android:id="@+id/message_delivered"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/sender_messages_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        android:src="@drawable/ic_online"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/sender_time"
        app:layout_constraintEnd_toStartOf="@+id/sender_time"
        app:layout_constraintTop_toTopOf="@+id/sender_time" />

    <ImageView
        android:id="@+id/message_seen"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/sender_messages_text"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/message_delivered"
        android:elevation="2dp"
        android:src="@drawable/ic_online"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/message_delivered"
        app:layout_constraintEnd_toStartOf="@+id/message_delivered"
        app:layout_constraintTop_toTopOf="@+id/message_delivered" />


</androidx.constraintlayout.widget.ConstraintLayout>